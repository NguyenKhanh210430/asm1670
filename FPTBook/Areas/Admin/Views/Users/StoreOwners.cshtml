@model IEnumerable<FPTBook.Models.AppUserModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Customers</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @*                    <a class="nav-link text-dark" role="button" data-toggle="modal" data-target="#resetPassword" asp-route-id="@item.Id">Reset Password</a>
                *@
                    @*                    <a id="resetPasswordLink" class="nav-link text-dark" role="button" data-toggle="modal" data-target="#resetPassword" asp-route-id="@item.Id">Reset Password</a>
                *@

                    <a class="nav-link text-dark" role="button" href="/Admin/Users/StoreOwnerResetPassword?id=@item.Id">Reset Password</a>
                </td>
            </tr>


        }
    </tbody>
</table>


