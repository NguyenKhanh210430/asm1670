@model IEnumerable<FPTBook.Models.OrderDetailModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Order</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Order.User.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book.Category.Name)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.Order.User.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order.Date)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Book.Title)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Book.Category.Name)
                </td>
           
        </tr>
}
    </tbody>
</table>
